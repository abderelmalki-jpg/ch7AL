rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Les images de profil :
    // - Tout le monde peut les lire (elles sont publiques).
    // - Seul l'utilisateur propriétaire peut les écrire/modifier/supprimer.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Les images de produits :
    // - Tout le monde peut les lire.
    // - Seuls les utilisateurs authentifiés peuvent en téléverser.
    match /product-images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

  }
}
