
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Hanout Price application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "User's display name, modifiable by the user."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture.",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the user account was created.",
          "format": "date-time"
        },
        "points": {
          "type": "number",
          "description": "User's accumulated points."
        },
        "badges": {
          "type": "array",
          "description": "An array of badge identifiers awarded to the user.",
          "items": {
            "type": "string"
          }
        },
        "contributions": {
          "type": "number",
          "description": "Number of contributions made by the user."
        },
        "language": {
          "type": "string",
          "description": "Preferred language of the user."
        }
      },
      "required": [
        "id",
        "email",
        "createdAt"
      ]
    },
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product listed in the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the product entity."
        },
        "name": {
          "type": "string",
          "description": "Name of the product."
        },
        "brand": {
          "type": "string",
          "description": "Brand of the product."
        },
        "category": {
          "type": "string",
          "description": "Category of the product."
        },
        "barcode": {
          "type": "string",
          "description": "Barcode of the product."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the product image, hosted on Firebase Storage.",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the product was added.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp indicating when the product was last updated.",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "category"
      ]
    },
    "Price": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Price",
      "type": "object",
      "description": "Represents a price entry for a product at a specific store, created by a user.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the price entry."
        },
        "productId": {
          "type": "string",
          "description": "Foreign key referencing the 'products' collection."
        },
        "storeId": {
          "type": "string",
          "description": "Foreign key referencing the 'stores' collection."
        },
        "userId": {
          "type": "string",
          "description": "Foreign key referencing the 'users' collection (the contributor)."
        },
        "price": {
          "type": "number",
          "description": "The price of the product."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the price was recorded.",
          "format": "date-time"
        },
        "verified": {
          "type": "boolean",
          "description": "Indicates if the price has been verified by the community."
        },
        "reports": {
          "type": "number",
          "description": "Number of reports against this price entry."
        }
      },
      "required": [
        "productId",
        "storeId",
        "userId",
        "price",
        "createdAt"
      ]
    },
    "Store": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Store",
      "type": "object",
      "description": "Represents a physical store location ('hanout').",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the store entity."
        },
        "name": {
          "type": "string",
          "description": "Name of the store."
        },
        "latitude": {
          "type": "number",
          "description": "Latitude of the store's location."
        },
        "longitude": {
          "type": "number",
          "description": "Longitude of the store's location."
        },
        "address": {
          "type": "string",
          "description": "Full address of the store."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the store was added.",
          "format": "date-time"
        }
      },
      "required": [
        "name"
      ]
    },
    "Comment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Comment",
      "type": "object",
      "description": "Represents a comment made by a user on a price submission.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the comment." },
        "userId": { "type": "string", "description": "Foreign key for the user who made the comment." },
        "userName": { "type": "string", "description": "Display name of the user at the time of commenting." },
        "userPhotoURL": { "type": "string", "description": "URL of the user's profile picture.", "format": "uri" },
        "text": { "type": "string", "description": "The content of the comment." },
        "createdAt": { "type": "string", "description": "Timestamp of when the comment was created.", "format": "date-time" }
      },
      "required": ["userId", "userName", "text", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores public user profile information. Document ID matches Firebase Auth UID."
        }
      },
      {
        "path": "/products/{productId}",
        "definition": {
          "entityName": "Product",
          "schema": {
            "$ref": "#/entities/Product"
          },
          "description": "A global collection of all unique products."
        }
      },
      {
        "path": "/prices/{priceId}",
        "definition": {
          "entityName": "Price",
          "schema": {
            "$ref": "#/entities/Price"
          },
          "description": "A log of all price submissions from users."
        }
      },
      {
        "path": "/prices/{priceId}/comments/{commentId}",
        "definition": {
          "entityName": "Comment",
          "schema": {
            "$ref": "#/entities/Comment"
          },
          "description": "Stores comments for a specific price submission."
        }
      },
      {
        "path": "/stores/{storeId}",
        "definition": {
          "entityName": "Store",
          "schema": {
            "$ref": "#/entities/Store"
          },
          "description": "A global collection of all unique stores."
        }
      }
    ]
  }
}
