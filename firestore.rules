rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own profile data.
     * @path /users/{userId}
     * @allow (get, create, update, delete, list) if the user is the owner (userId matches request.auth.uid).
     * @deny (get, create, update, delete, list) if the user is not the owner.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Allows public read access to product information and restricts write access to the owner.
     * @path /products/{productId}
     * @allow (get, list) Public read access to product information.
     * @deny (create, update, delete) No one can create, update, delete product information without owner validation.
     * @principle Allows public read access while restricting write access to the owner (if ownership were defined).
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to price information and restricts write access to the user who created the price.
     * @path /prices/{priceId}
     * @allow (get, list) Public read access to price information.
     * @allow (create) Authenticated user can create a price.
     * @allow (update, delete) The user who created the price can update/delete it.
     * @deny (create, update, delete) if not the owner.
     * @principle Allows public read access while restricting write access to the owner.
     */
    match /prices/{priceId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

        /**
         * @description Allows authenticated users to create comments on a price submission.
         * @path /prices/{priceId}/comments/{commentId}
         * @allow (create) Authenticated user can create a comment.
         * @deny (get, list, update, delete) No one can read, list, update, delete comments.
         * @principle Restricts write access to authenticated users only.
         */
    match /prices/{priceId}/comments/{commentId} {
       function isSignedIn() {
        return request.auth != null;
      }
      allow create: if isSignedIn();
      allow get: if false;
      allow list: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to store information and restricts write access to the owner.
     * @path /stores/{storeId}
     * @allow (get, list) Public read access to store information.
     * @deny (create, update, delete) No one can create, update, delete store information without owner validation.
     * @principle Allows public read access while restricting write access to the owner (if ownership were defined).
     */
    match /stores/{storeId} {
      allow get, list: if true;
      allow create: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
      allow update: if false;
      allow delete: if false;
    }
  }
}