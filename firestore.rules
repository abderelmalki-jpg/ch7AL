rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Les utilisateurs peuvent lire/écrire leur propre profil
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Tout le monde peut lire les produits, les utilisateurs connectés peuvent en créer/mettre à jour
    match /products/{productId} {
      allow get, list: if true;
      // On autorise la création/mise à jour si l'utilisateur est connecté.
      // On autorise aussi l'ajout ou la modification d'un code-barres.
      allow create, update: if isSignedIn() && (
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['name', 'brand', 'category', 'imageUrl', 'barcode', 'updatedAt', 'uploadedBy', 'createdAt'])
      );
      allow delete: if false; // Suppression non autorisée
    }
    
    // Tout le monde peut lire les magasins, les utilisateurs connectés peuvent en créer/mettre à jour
    match /stores/{storeId} {
        allow get, list: if true;
        allow create, update: if isSignedIn();
        allow delete: if false; // Suppression non autorisée
    }

    // Tout le monde peut lire les prix
    match /prices/{priceId} {
      allow get, list: if true;
      
      // Un utilisateur connecté peut créer un prix si les données sont valides
      allow create: if isSignedIn()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.price > 0;

      // Seul un utilisateur connecté peut voter (mettre à jour les upvotes/downvotes)
      allow update: if isSignedIn() &&
                  // On autorise la mise à jour uniquement pour les votes
                  request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotes', 'downvotes', 'voteScore']);
                  
      // Seul le créateur peut supprimer un prix (logique à définir)
      allow delete: if isOwner(resource.data.userId);
    }

    // Les utilisateurs connectés peuvent ajouter et lire des commentaires
    match /prices/{priceId}/comments/{commentId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() 
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
  }
}
